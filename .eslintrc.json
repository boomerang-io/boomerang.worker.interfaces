{
  "parserOptions": {
    // Only ESLint 6.2.0 and later support ES2020.
    "ecmaVersion": 2020
  },
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "rules": {
    "no-process-exit": "off"
  },
  "ignorePatterns": ["node_modules"]
}
