{
  "name": "boomerang-worker",
  "private": true,
  "repository": "git@github.ibm.com:Boomerang/boomerang.worker.base.git",
  "author": "Tyson Lawrie <twlawrie@us.ibm.com>",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=8.10.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages",
    "test": "cross-env NODE_ENV=test jest packages/**/*.spec.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/.{js,json,css,md}": [
      "prettier --print-width 120 --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test"
        ]
      ]
    }
  }
}
